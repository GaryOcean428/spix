{
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "OPENAI_API_KEY": "@openai_api_key",
        "ANTHROPIC_API_KEY": "@anthropic_api_key",
        "GOOGLE_API_KEY": "@google_api_key"
    },
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "build" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        }
    ],
    "probes": [
        {
            "path": "/",
            "status": 200
        }
    ]
}
