{
  "compilerOptions": {
    "composite": true, // Required for project references
    /* Target modern Node.js/Vercel runtimes */
    "target": "ES2020",
    "module": "NodeNext", // Use NodeNext for modern ESM/CJS interop in Node
    "moduleResolution": "NodeNext", // Required with module: NodeNext
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Include DOM for Web APIs (Request/Response)

    /* Interop and Strictness */
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true, // Skip checking library files for speed
    "forceConsistentCasingInFileNames": true,

    /* Output and Resolution */
    "resolveJsonModule": true,
    "outDir": "./.vercel/output/functions/api", // Define specific output (Vercel might override)
    "rootDir": ".", // Root is the 'api' directory
    "sourceMap": true, // Enable source maps for debugging
    "allowJs": true // Allow JS files if needed
  },
  "include": ["./**/*.ts"], // Include all TS files within the 'api' directory
  "exclude": ["node_modules"],
  "ts-node": { // Configuration for ts-node if used locally (optional)
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
